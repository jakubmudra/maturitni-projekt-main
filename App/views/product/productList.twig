<div class="container pt-5">
    <div class="row">
        <div class="col-12">
            <h1>{{ __("product-list-page-title") }}</h1>
            <p class="text-right">{{ __("product-list-showing-products") }} : {{ products|length  }} </p>
            <a href="/product/edit">{{ __("add-new-product") }}</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">{{ __("name") }}</th>
                        <th scope="col">{{ __("price") }}</th>
                        <th scope="col">{{ __("type") }}</th>
                        <th scope="col">{{ __("on-stock") }}</th>
                        <th scope="col">{{ __("actions") }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in products %}
                        {{ include('product/productList-single.twig') }}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
